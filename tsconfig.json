{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "types": ["react", "react-dom"],
    "paths": {
      "react": ["./shims/reactGlobal"],
      "react-dom/client": ["./shims/reactDomClient"],
      "react-konva": ["./shims/reactKonva"],
      "react/jsx-runtime": ["./shims/jsxRuntime"],
      "its-fine": ["./shims/itsFine"],
      "tamagui": ["./shims/tamagui"]
    }
  },
  "include": [".", "utils", "hooks", "components", "global.d.ts", "index.tsx"],
  "exclude": ["node_modules", "dist"]
}
